<GridPane fx:id="rootGridPane" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="640.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chrrubin.cherryrenderer.gui.PlayerStageController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <MenuBar GridPane.hgrow="ALWAYS">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#onMenuSettings" text="Settings" />
              <MenuItem mnemonicParsing="false" onAction="#onMenuClose" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <MediaView fx:id="videoMediaView" fitHeight="360.0" fitWidth="640.0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
      <HBox alignment="BOTTOM_CENTER" spacing="10.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
         <children>
            <Label fx:id="currentTimeLabel" text="--:--" />
            <Slider fx:id="timeSlider" disable="true" HBox.hgrow="ALWAYS" />
            <Label fx:id="totalTimeLabel" alignment="TOP_LEFT" text="--:--" textAlignment="RIGHT" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <GridPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </GridPane.margin>
      </HBox>
      <HBox alignment="BOTTOM_CENTER" spacing="10.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </GridPane.margin>
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="playButton" disable="true" mnemonicParsing="false" onAction="#onPlay" text="&gt;">
                     <tooltip>
                        <Tooltip text="Play/Pause" />
                     </tooltip>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
                  <Button fx:id="rewindButton" disable="true" mnemonicParsing="false" onAction="#onRewind" text="&lt;&lt;">
                     <tooltip>
                        <Tooltip text="Rewind" />
                     </tooltip></Button>
                  <Button fx:id="stopButton" disable="true" mnemonicParsing="false" onAction="#onStop" text="â–¡">
                     <tooltip>
                        <Tooltip text="Stop" />
                     </tooltip></Button>
                  <Button fx:id="forwardButton" disable="true" mnemonicParsing="false" onAction="#onForward" text="&gt;&gt;">
                     <tooltip>
                        <Tooltip text="Fast Forward" />
                     </tooltip></Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Vol:" />
                  <Slider fx:id="volumeSlider" disable="true" maxWidth="100.0" value="100.0" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" />
   </padding>
</GridPane>

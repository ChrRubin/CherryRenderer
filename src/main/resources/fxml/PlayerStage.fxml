<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="rootStackPane" minHeight="450.0" minWidth="640.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chrrubin.cherryrenderer.gui.PlayerStageController">
   <children>
      <VBox id="background-vbox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" StackPane.alignment="CENTER" />
      <MediaView fx:id="videoMediaView" fitHeight="360.0" fitWidth="640.0" focusTraversable="true" StackPane.alignment="CENTER" />
      <MenuBar id="menu-bar" fx:id="menuBar" maxHeight="-Infinity" useSystemMenuBar="true" StackPane.alignment="TOP_CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Menu">
            <items>
              <MenuItem fx:id="preferencesMenuItem" mnemonicParsing="false" onAction="#onMenuPreferences" text="Preferences" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#onMenuExit" text="Exit" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onMenuHelp" text="Help" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#onMenuAbout" text="About" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <VBox id="bottom-bar" fx:id="bottomBarVBox" alignment="BOTTOM_CENTER" disable="true" maxHeight="-Infinity" spacing="5.0" StackPane.alignment="BOTTOM_CENTER">
         <children>
            <HBox alignment="BOTTOM_CENTER" spacing="5.0">
               <children>
                  <Label id="time-label" fx:id="currentTimeLabel" alignment="CENTER" minWidth="50.0" text="--:--:--" />
                  <Slider fx:id="timeSlider" focusTraversable="false" minWidth="500.0" HBox.hgrow="ALWAYS" />
                  <Label id="time-label" fx:id="totalTimeLabel" alignment="CENTER" minWidth="50.0" text="--:--:--" textAlignment="RIGHT" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" spacing="10.0">
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button focusTraversable="false" minHeight="38.0" minWidth="38.0" mnemonicParsing="false" onAction="#onPlay">
                           <tooltip>
                              <Tooltip text="Play/Pause" />
                           </tooltip>
                           <HBox.margin>
                              <Insets right="30.0" />
                           </HBox.margin>
                           <graphic>
                              <ImageView fx:id="playPauseImageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@/icons/play.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button focusTraversable="false" minHeight="33.0" minWidth="33.0" mnemonicParsing="false" onAction="#onRewind">
                           <tooltip>
                              <Tooltip text="Rewind" />
                           </tooltip>
                           <graphic>
                              <ImageView id="player-button" fx:id="rewindImageView" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@/icons/rewind.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button focusTraversable="false" minHeight="33.0" minWidth="33.0" mnemonicParsing="false" onAction="#onStop">
                           <tooltip>
                              <Tooltip text="Stop" />
                           </tooltip>
                           <graphic>
                              <ImageView fx:id="stopImageView" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@/icons/stop.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button focusTraversable="false" minHeight="33.0" minWidth="33.0" mnemonicParsing="false" onAction="#onForward">
                           <tooltip>
                              <Tooltip text="Fast Forward" />
                           </tooltip>
                           <graphic>
                              <ImageView fx:id="fastForwardImageView" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@/icons/forward.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <ImageView fx:id="volumeImageView" fitHeight="20.0" fitWidth="20.0" onMouseReleased="#toggleMute" opacity="0.4" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/icons/volume.png" />
                           </image>
                        </ImageView>
                        <Slider fx:id="volumeSlider" focusTraversable="false" maxWidth="100.0" value="100.0" />
                     </children>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </VBox>
      <VBox id="tooltip-vbox" fx:id="timeTooltipVBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" visible="false">
         <children>
            <Label fx:id="timeTooltipLabel" alignment="CENTER" text="0:00:00&#10;[-0:00:00]" textAlignment="CENTER">
               <font>
                  <Font size="11.0" />
               </font></Label>
         </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
      </VBox>
      <VBox id="tooltip-vbox" fx:id="volumeTooltipVBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" visible="false">
         <children>
            <Label fx:id="volumeTooltipLabel" alignment="CENTER" text="100%" textAlignment="CENTER">
               <font>
                  <Font size="11.0" />
               </font></Label>
         </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
